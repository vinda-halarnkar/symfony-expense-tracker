{% extends 'base.html.twig' %}

{% block title %}Expense{% endblock %}

{% block body %}
    <h1>Expense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ expense.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ expense.amount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ expense.date ? expense.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsRecurring</th>
                <td>{{ expense.isRecurring ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_expense_index') }}">back to list</a>

    <a href="{{ path('app_expense_edit', {'id': expense.id}) }}">edit</a>

    {{ include('expense/_delete_form.html.twig') }}
{% endblock %}
